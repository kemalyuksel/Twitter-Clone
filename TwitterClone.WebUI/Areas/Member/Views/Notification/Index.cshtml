@model List<NotificationListDto>


@{
    ViewData["Title"] = "Index";
}



    <div class="mt-3">

        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <div class="alert alert-success p-3 my-2">
                    <form method="post" class="my-1" asp-action="Index">
                        <p class="lead">
                            <input type="hidden" name="id" value="@item.Id" />
                            @item.Description Sent a Message
                            <button type="submit" class="btn btn-primary btn-sm float-right">Go Messages</button>
                        </p>
                    </form>
                </div>
            }
        }
        else
        {
            <div class="alert alert-warning p-3 my-2">
                <p class="text-center lead">There are no notifications</p>
            </div>
        }

    </div>