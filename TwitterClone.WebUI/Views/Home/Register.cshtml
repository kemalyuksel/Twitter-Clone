@model AppUserRegisterDto

@{
    ViewData["Title"] = "Register";
}




<h4 class="text-center mt-4"><b>Twitter'a Kayıt Ol</b></h4>

<form class="mt-3 mx-auto w-25 p-3 " method="post" asp-action="Register">

    <div class="form-group">
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        <input asp-for="@Model.UserName" class="form-control border-top-0 border-right-0 border-left-0" placeholder="Kullanıcı Adı" />
    </div>

    <div class="form-group">
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
        <input asp-for="@Model.Name" class="form-control border-top-0 border-right-0 border-left-0" placeholder="Ad" />
    </div>

    <div class="form-group">
        <span asp-validation-for="@Model.SurName" class="text-danger"></span>
        <input asp-for="@Model.SurName" class="form-control border-top-0 border-right-0 border-left-0" placeholder="Soyad" />
    </div>

    <div class="form-group">
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
        <input asp-for="@Model.Email" type="email" class="form-control border-top-0 border-right-0 border-left-0" placeholder="E-mail" />
    </div>

    <div class="form-group">
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
        <input asp-for="@Model.Password" type="password" class="form-control border-top-0 border-right-0 border-left-0" placeholder="Şifre" />
    </div>

    <div class="form-group">
        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
        <input asp-for="@Model.ConfirmPassword" type="password" class="form-control border-top-0 border-right-0 border-left-0" placeholder="Şifre Tekrar" />
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <button id="login" type="submit" class="btn btn-primary btn-block">Kayıt Ol</button>


</form>


