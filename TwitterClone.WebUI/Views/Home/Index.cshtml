@model AppUserLoginDto

@{
    ViewData["Title"] = "Index";
}



<h4 class="text-center mt-4"><b>Twitter'a Giriş Yap</b></h4>

<form class="mt-3 mx-auto w-25 p-3 " asp-action="SignIn" method="post">

    <div class="form-group">
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        <input asp-for="@Model.UserName" class="form-control border-top-0 border-right-0 border-left-0" placeholder="Kullanıcı Adı" />
    </div>

    <div class="form-group">
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
        <input asp-for="@Model.Password" type="password" class="form-control border-top-0 border-right-0 border-left-0" placeholder="Şifre" />
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <button id="login" type="submit" class="btn btn-primary btn-block">Giriş Yap</button>

    <div class="text-center mt-4 p-2">
        <a href="">Şifreni mi Unuttun ?&nbsp;.</a>
        <a asp-action="Register">Twitter'a Kayıt Ol</a>
    </div>

</form>


